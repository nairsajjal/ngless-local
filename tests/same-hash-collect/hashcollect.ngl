ngless "1.1"
import "parallel" version "1.0"

samples = ['basic']
sample = lock1(samples)
counted = count(samfile(sample + '.sam'), features=['seqname'], multiple={dist1})
collect(counted,
        current=sample,
        allneeded=samples,
        ofile='output.counts.txt',
        auto_comments=[{hash}, {script}])
